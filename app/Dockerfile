FROM base:latest

RUN mkdir /app
WORKDIR /app
COPY . /app

RUN g++ -O3 -Wall -shared -std=c++14 -fPIC $(python3 -m pybind11 --includes) -Iextern/pybind11 hello.cpp -o test$(python3-config --extension-suffix)
# RUN python3 hello.py